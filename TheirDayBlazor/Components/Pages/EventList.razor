@page "/event-list"
@using Microsoft.EntityFrameworkCore
@using TheirDayBlazor.Models
@inject NavigationManager Navigation
@inject TheirDayBlazor.Data.AppDbContext DbContext


<h1>Event Suggestions</h1>
<div class="filters mb-3">
    <input type="text" @bind="searchTerm" placeholder="Search events..." class="form-control mb-2"/>

    <select @bind="selectedPrice" class="form-control mb-2">
        <option value="">All Prices</option>
        <option value="0">Free</option>
        <option value="10">$</option>
        <option value="20">$$</option> 
        <option value="30+">$$$</option>
    </select>

    <select @bind="selectedAgeGroup" class="form-control mb-2">
        <option value="">All Age Groups</option>
        <option value="0-2">0-2</option>
        <option value="3-5">3-5</option>
        <option value="6-8">6-8</option>
        <option value="9-12">9-12</option>
        <option value="13+">13+</option>
    </select>

    <label>
        <input type="checkbox" @bind="showOutdoorOnly" /> Outdoor   
    </label>
</div>

@if (events == null)
{
    <p>Loading events...</p>
}
else if (!events.Any())
{
    <p>No events found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age Group</th>
                <th>Price</th>
                <th>Location</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var eventItem in events)
            {
                <tr>
                    <td>@eventItem.Name</td>
                    <td>@eventItem.AgeGroup</td>
                    <td>@eventItem.Price.ToString("C")</td>
                    <td>@eventItem.Location</td>
                    <td>
                        <button class="btn btn-warning btn-sm" @onclick="() => EditEvent(eventItem.Id)">Edit</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => DeleteEvent(eventItem.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<TheirDayBlazor.Models.Event>? events;
    private List<TheirDayBlazor.Models.Event>? filteredEvents = new();

    private string searchTerm = string.Empty;
    private string selectedAgeGroup = string.Empty;
    private string selectedPrice = string.Empty;
    private bool showOutdoorOnly = false;

    protected override async Task OnInitializedAsync()
    {
        events = await DbContext.Events.ToListAsync();
    }

    private void EditEvent(int id)
    {
        Navigation.NavigateTo($"/edit-event/{id}");
    }

    private async Task DeleteEvent(int id)
    {
        var eventItem = await DbContext.Events.FindAsync(id);
        if (eventItem != null)
        {
            DbContext.Events.Remove(eventItem);
            await DbContext.SaveChangesAsync();
            events.Remove(eventItem);
        }
    }
}
